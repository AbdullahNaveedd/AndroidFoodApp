<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/grid">
    <fragment
        android:id="@+id/bell3"
        android:name="com.example.foodapp.screens.map.Bell"
        android:label="fragment_bell"
        tools:layout="@layout/fragment_bell" >
        <action
            android:id="@+id/action_bell3_to_menu3"
            app:destination="@id/menu3" />
        <action
            android:id="@+id/action_bell3_to_grid"
            app:destination="@id/grid" />
    </fragment>
    <fragment
        android:id="@+id/menu3"
        android:name="com.example.foodapp.screens.menu.Menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menu3_to_profile3"
            app:destination="@id/profile3" />
        <action
            android:id="@+id/action_menu3_to_grid"
            app:destination="@id/grid" />

    </fragment>
    <fragment
        android:id="@+id/profile3"
        android:name="com.example.foodapp.screens.Profile.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile3_to_grid"
            app:destination="@id/grid" />
        <action
            android:id="@+id/action_profile3_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/grid"
        android:name="com.example.foodapp.screens.home.Grid"
        android:label="fragment_grid"
        tools:layout="@layout/fragment_grid" >
        <action
            android:id="@+id/action_grid_to_bell3"
            app:destination="@id/bell3" />

    </fragment>



