<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.additem.Add_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/back_gray"
                />
            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Items"
                android:textSize="20dp"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/sen_regular"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_regular"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <EditText
            android:id="@+id/edititemname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_itemname_bg"
            android:hint="Chicken Biryani"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:inputType="text"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/itemname"
            app:layout_constraintTop_toBottomOf="@+id/itemname"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            />

        <TextView
            android:id="@+id/uploadphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD PHOTO/VIDEO"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_regular"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/edititemname"
            />
        <ImageView
            android:id="@+id/uploadimg"
            android:layout_width="111dp"
            android:layout_height="100dp"
            android:src="@drawable/food1"
            android:clipToOutline="true"
            android:background="@drawable/image_round_viewpager"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/uploadphoto"
            app:layout_constraintTop_toBottomOf="@+id/uploadphoto"
            />
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_regular"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/uploadimg"
            />

        <EditText
            android:id="@+id/edittextprice"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/add_itemname_bg"
            android:hint="$ 50"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/price"
            app:layout_constraintTop_toBottomOf="@+id/price"
            />

        <Button
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/add_itemname_bg"
            android:text="Add Photo"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sen_regular"
            android:textColor="@color/edittextcolor"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="@+id/uploadimg"
            app:layout_constraintBottom_toBottomOf="@+id/uploadimg"
            />


        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sen_regular"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@id/edittextprice"
            />

        <EditText
            android:id="@+id/edittextdetails"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/add_itemname_bg"
            android:fontFamily="@font/sen_regular"
            android:gravity="top|start"
            android:hint="Lorem ipsum dolor sit amet, consectetur adips cing elit. Bibendum in vel, mattis et amet dui mauris turpis."
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@+id/details"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/itemname"
             />


        <Button
            android:id="@+id/savechanges"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/btn_design"
            android:fontFamily="@font/sen_bold"
            android:text="SAVE CHANGES"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>