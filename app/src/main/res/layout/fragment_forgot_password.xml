<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.auth.ForgotPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainlayoutone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LoginBg"
        >
        <ImageView
            android:id="@+id/gray_ellipse"
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/loginellipse"
            />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back_btn"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@id/gray_ellipse"
            />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="390dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/auth_bg_orange"
            android:layout_marginEnd="-50dp"
            />

        <TextView
            android:id="@+id/textlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Forgot Password"
            android:fontFamily="@font/sen_regular"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/description_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textlogin"
            android:text="Please sign in to your existing account"
            android:fontFamily="@font/sen_regular"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayoutsecond"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_login"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/roundcorner_view"
            >
            <TextView
                android:id="@+id/textemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:fontFamily="@font/sen_regular"
                android:textColor="@color/EmailTextColor"
                app:layout_constraintStart_toStartOf="@+id/constraintlayoutsecond"
                app:layout_constraintTop_toTopOf="@id/constraintlayoutsecond"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:textSize="17dp"
                />
            <EditText
                android:id="@+id/emailedittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="example@gmail.com"
                android:fontFamily="@font/sen_regular"
                android:background="@drawable/logindialogbox"
                app:layout_constraintStart_toStartOf="@+id/textemail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textemail"
                />


            <Button
                android:id="@+id/sendbtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:text="SEND CODE"
                android:fontFamily="@font/sen_bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_design"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailedittext"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>