<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screens.Profile.SettingScreen">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="150dp"
        app:use_controller="true"
        app:controller_layout_id="@layout/custom_controller"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text">
    </androidx.media3.ui.PlayerView>
    <View
        android:id="@+id/tap_left"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/playerView"
        app:layout_constraintBottom_toBottomOf="@id/playerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tap_right"
        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/tap_right"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="@id/playerView"
        app:layout_constraintBottom_toBottomOf="@id/playerView"
        app:layout_constraintStart_toEndOf="@id/tap_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_btndesign"
        android:src="@drawable/imageone"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/imagethree"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_btndesign"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        />

    <ImageView
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:src="@drawable/imagesecond"
        android:background="@drawable/round_btndesign"
        app:layout_constraintTop_toBottomOf="@+id/playerView"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/increment"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_design"
        android:backgroundTint="@color/additemnamebg"
        android:text="+"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/decrement"
        app:layout_constraintStart_toStartOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <Button
        android:id="@+id/decrement"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_design"
        android:backgroundTint="@color/additemnamebg"
        android:text="-"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintStart_toEndOf="@+id/increment"
        app:layout_constraintTop_toBottomOf="@id/text" />


</androidx.constraintlayout.widget.ConstraintLayout>