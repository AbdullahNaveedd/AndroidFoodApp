<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.auth.Verification">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrainlayoutone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LoginBg"
        >
        <ImageView
            android:id="@+id/gray_ellipse"
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/loginellipse"
            />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/back_btn"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@id/gray_ellipse"
            />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="390dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/auth_bg_orange"
            android:layout_marginEnd="-50dp"
            />

        <TextView
            android:id="@+id/textlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Verification"
            android:fontFamily="@font/sen_regular"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="120dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/description_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textlogin"
            android:text="We have sent a code to your email"
            android:fontFamily="@font/sen_regular"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_login"
            android:text="example@gmail.com"
            android:fontFamily="@font/sen_bold"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayoutsecond"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_login"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/roundcorner_view"
            >
            <TextView
                android:id="@+id/textemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE"
                android:fontFamily="@font/sen_regular"
                android:textColor="@color/EmailTextColor"
                app:layout_constraintStart_toStartOf="@+id/constraintlayoutsecond"
                app:layout_constraintTop_toTopOf="@id/constraintlayoutsecond"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_underlined_text"
                android:fontFamily="@font/sen_bold"
                android:textColor="@color/EmailTextColor"
                app:layout_constraintEnd_toEndOf="@+id/constraintlayoutsecond"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@+id/time"
                android:layout_marginEnd="84dp"
                android:textSize="17dp"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="in.50sec"
                android:fontFamily="@font/sen_regular"
                android:textColor="@color/EmailTextColor"
                app:layout_constraintStart_toEndOf="@+id/resend"
                app:layout_constraintTop_toTopOf="@id/constraintlayoutsecond"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="14dp"
                android:textSize="17dp"
                />


            <EditText
                android:id="@+id/emailedittext3"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="25dp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"
                android:fontFamily="@font/sen_regular"
                android:background="@drawable/logindialogbox"
                app:layout_constraintStart_toEndOf="@+id/emailedittext2"
                app:layout_constraintTop_toTopOf="@+id/emailedittext1"
                />


            <EditText
                android:id="@+id/emailedittext1"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="18dp"
                android:paddingStart="25dp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"
                android:fontFamily="@font/sen_regular"
                android:background="@drawable/logindialogbox"
                app:layout_constraintStart_toStartOf="@+id/textemail"
                app:layout_constraintTop_toBottomOf="@+id/textemail"
                />



            <EditText
                android:id="@+id/emailedittext2"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="25dp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"
                android:fontFamily="@font/sen_regular"
                android:background="@drawable/logindialogbox"
                app:layout_constraintStart_toEndOf="@+id/emailedittext1"
                app:layout_constraintTop_toTopOf="@+id/emailedittext1"
                />



            <EditText
                android:id="@+id/emailedittext4"
                android:layout_width="62dp"
                android:layout_height="55dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingStart="25dp"
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="1"
                android:fontFamily="@font/sen_regular"
                android:background="@drawable/logindialogbox"
                app:layout_constraintStart_toEndOf="@id/emailedittext3"
                app:layout_constraintTop_toTopOf="@+id/emailedittext1"
                />


            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:text="VERIFY"
                android:fontFamily="@font/sen_bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_design"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailedittext1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>